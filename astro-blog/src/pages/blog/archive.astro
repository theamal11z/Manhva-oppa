---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { getTitle, getDescription } from '../../consts';
import { getAllBlogPosts } from '../../lib/blogDataService.js';

// Get URL parameters for pagination
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const limit = 12; // posts per page
const offset = (page - 1) * limit;

// Get dynamic site info
const dynamicTitle = await getTitle();
const dynamicDescription = await getDescription();

// Fetch the blog posts with pagination
const { posts, count } = await getAllBlogPosts({ 
  limit, 
  offset,
  orderBy: 'published_date',
  ascending: false
});

// Calculate pagination info
const totalPages = Math.ceil(count / limit);
const showPrevious = page > 1;
const showNext = page < totalPages;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead 
      title={`Blog Archive | ${dynamicTitle}`}
      description={`Browse all blog posts on ${dynamicTitle}. ${dynamicDescription}`}
      keywords="manga archive, manhwa archive, manga blog posts, manga articles, anime blog"
      pageType="collectionPage"
    />
  </head>
  <body>
    <Header />
    <main>
      <Breadcrumbs title="Blog Archive" />
      <!-- Page Header -->
      <section class="py-16 bg-gray-900">
        <div class="max-w-6xl mx-auto px-4 text-center">
          <h1 class="manga-title text-4xl md:text-5xl mb-4">Blog Archive</h1>
          <p class="text-xl text-gray-400 max-w-3xl mx-auto">
            Browse all our articles and manga analysis
          </p>
        </div>
      </section>
      
      <!-- Blog Posts Grid -->
      <section class="py-12">
        <div class="max-w-6xl mx-auto px-4">
          {posts.length === 0 ? (
            <div class="manga-panel p-8 text-center">
              <p class="text-xl">No blog posts found</p>
              <p class="mt-4 text-gray-400">Check back soon for new content!</p>
            </div>
          ) : (
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {posts.map((post) => (
                <li class="manga-panel overflow-hidden bg-gray-800 hover:transform hover:scale-105 transition-transform duration-300 flex flex-col h-full">
                  <a href={`/blog/${post.slug}`}>
                    <div class="overflow-hidden">
                      <img 
                        width={720} 
                        height={360} 
                        src={post.featured_image || post.manga?.cover_image || '/blog-placeholder-1.jpg'} 
                        alt={post.title} 
                        class="h-48 w-full object-cover" 
                      />
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                      <div class="mb-2 text-sm text-gray-400">
                        <FormattedDate date={new Date(post.published_date)} />
                        {post.views > 0 && (
                          <span class="ml-2 text-xs">
                            â€¢ {post.views} views
                          </span>
                        )}
                        {post.manga && (
                          <span class="block mt-1 manga-border px-2 py-0.5 text-xs inline-block">
                            {post.manga.title}
                          </span>
                        )}
                      </div>
                      <h4 class="text-xl mb-2 font-bold hover:text-red-500 transition-colors">{post.title}</h4>
                      <p class="text-gray-400 mb-4 flex-grow line-clamp-3">{post.seo_description}</p>
                      <span class="manga-border inline-block px-3 py-1 text-sm bg-red-500 hover:bg-red-600 transition-colors">
                        Read more
                      </span>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          )}
          
          <!-- Pagination -->
          <div class="mt-12 flex items-center justify-between">
            <div class="text-gray-400">
              Page {page} of {totalPages}
            </div>
            
            <div class="flex gap-4">
              {showPrevious && (
                <a 
                  href={`/blog/archive${page > 2 ? `?page=${page - 1}` : ''}`}
                  class="manga-border px-4 py-2 bg-gray-800 hover:bg-gray-700 transition-colors"
                >
                  Previous
                </a>
              )}
              
              {showNext && (
                <a 
                  href={`/blog/archive?page=${page + 1}`}
                  class="manga-border px-4 py-2 bg-red-500 hover:bg-red-600 transition-colors"
                >
                  Next
                </a>
              )}
            </div>
          </div>
          
          <div class="mt-8 text-center text-gray-400">
            <p>Showing {posts.length} posts of {count} total</p>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
