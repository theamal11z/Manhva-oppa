---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { getTitle, getDescription } from '../../consts';
import { searchBlogPosts } from '../../lib/blogDataService.js';

// Get search query from URL parameters
const query = Astro.url.searchParams.get('q') || '';

// Get dynamic site info
const dynamicTitle = await getTitle();
const dynamicDescription = await getDescription();

// Only search if there's a query
const searchResults = query ? await searchBlogPosts(query, 20) : [];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead 
      title={query ? `Search Results: ${query} | ${dynamicTitle}` : `Search Blog | ${dynamicTitle}`}
      description={`Search for blog posts on ${dynamicTitle}. ${dynamicDescription}`}
      keywords={`manga search, manhwa search, ${query || 'anime blog'}, manga blog posts`}
      pageType="SearchResultsPage"
    />
    
    {/* Prevent search pages from being indexed to avoid duplicate content */}
    {query && <meta name="robots" content="noindex, follow" />}
  </head>
  <body>
    <Header />
    <main>
      <Breadcrumbs title={query ? `Search: ${query}` : 'Search Blog'} />
      <!-- Search Header -->
      <section class="py-16 bg-gray-900">
        <div class="max-w-6xl mx-auto px-4 text-center">
          <h1 class="manga-title text-4xl md:text-5xl mb-4">Blog Search</h1>
          
          <!-- Search Form -->
          <form class="max-w-2xl mx-auto mt-8">
            <div class="flex">
              <input 
                type="text" 
                name="q" 
                value={query}
                placeholder="Search for blog posts..." 
                class="manga-border flex-grow px-4 py-3 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-red-500"
              />
              <button 
                type="submit" 
                class="manga-border px-6 py-3 bg-red-500 hover:bg-red-600 transition-colors ml-2"
              >
                Search
              </button>
            </div>
          </form>
        </div>
      </section>
      
      <!-- Search Results -->
      <section class="py-12">
        <div class="max-w-6xl mx-auto px-4">
          {query && (
            <h2 class="text-2xl mb-6">
              {searchResults.length === 0
                ? `No results found for "${query}"`
                : `Found ${searchResults.length} results for "${query}"`}
            </h2>
          )}
          
          {searchResults.length > 0 && (
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {searchResults.map((post) => (
                <li class="manga-panel overflow-hidden bg-gray-800 hover:transform hover:scale-105 transition-transform duration-300 flex flex-col h-full">
                  <a href={`/blog/${post.slug}`}>
                    <div class="overflow-hidden">
                      <img 
                        width={720} 
                        height={360} 
                        src={post.featured_image || post.manga?.cover_image || '/blog-placeholder-1.jpg'} 
                        alt={post.title} 
                        class="h-48 w-full object-cover" 
                      />
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                      <div class="mb-2 text-sm text-gray-400">
                        <FormattedDate date={new Date(post.published_date)} />
                        {post.views > 0 && (
                          <span class="ml-2 text-xs">
                            â€¢ {post.views} views
                          </span>
                        )}
                        {post.manga && (
                          <span class="block mt-1 manga-border px-2 py-0.5 text-xs inline-block">
                            {post.manga.title}
                          </span>
                        )}
                      </div>
                      <h4 class="text-xl mb-2 font-bold hover:text-red-500 transition-colors">{post.title}</h4>
                      <p class="text-gray-400 mb-4 flex-grow line-clamp-3">{post.seo_description}</p>
                      <span class="manga-border inline-block px-3 py-1 text-sm bg-red-500 hover:bg-red-600 transition-colors">
                        Read more
                      </span>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          )}
          
          {!query && (
            <div class="text-center py-12">
              <p class="text-gray-400 text-lg">Enter a search term to find blog posts</p>
            </div>
          )}
          
          {query && searchResults.length === 0 && (
            <div class="manga-panel p-8 text-center">
              <p class="text-xl">No blog posts found for "{query}"</p>
              <p class="mt-4 text-gray-400">Try another search term or browse our <a href="/blog/archive" class="text-red-500 hover:underline">blog archive</a></p>
            </div>
          )}
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
